  const ACCESS = "study100";  
  let selectedSubject = "";  
  
  function askAccess(sub){  
    selectedSubject = sub;  
    document.getElementById("accessBox").classList.remove("hidden");  
    document.getElementById("contentBox").classList.add("hidden");  
    document.getElementById("codeInput").value = "";  
  }  
  
  function unlock(){  
    let code = document.getElementById("codeInput").value.trim();  
    if(code === ACCESS){  
      document.getElementById("contentBox").classList.remove("hidden");  
      document.getElementById("subTitle").innerText = selectedSubject;  
      document.getElementById("accessBox").classList.add("hidden");  
      alert("Access Granted!");  
    } else {  
      alert("Access Code ‡¶≠‡ßÅ‡¶≤!");  
    }  
  }  
</script>  </body>  
